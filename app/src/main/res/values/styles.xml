<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialCardViewStyle">@style/Widget.CardView</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardMaxElevation">8dp</item>
    </style>

    <style name="CurrentlyCardView" parent="Widget.CardView">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
    </style>

    <style name="DailyCardView" parent="Widget.CardView">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
    </style>

</resources>
